@page "/object/{ObjectId:int}"
@page "/object/edit/{ObjectId:int}"
@using ZorgmeldSysteem.Blazor.Models.DTOs.Object
@using ZorgmeldSysteem.Blazor.Models.DTOs.Company
@using ZorgmeldSysteem.Blazor.Models.Enums
@using ZorgmeldSysteem.Blazor.Services.Api
@using ZorgmeldSysteem.Blazor.Services.Business
@inject ObjectApiService ObjectApiService
@inject CompanyApiService CompanyApiService
@inject QRCodeService QRCodeService
@inject NavigationManager Navigation
@rendermode InteractiveServer

<PageTitle>@(isEditMode ? "Object Bewerken" : "Object Details")</PageTitle>

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h3>
            @(isEditMode ? $"Object Bewerken: {objectDto?.ObjectCode}" : $"Object Details: {objectDto?.ObjectCode}")
        </h3>
        <div>
            @if (!isEditMode && objectDto != null)
            {
                <button class="btn btn-warning me-2" @onclick="EnableEditMode">
                    <i class="bi bi-pencil"></i> Bewerken
                </button>
            }
            <button class="btn btn-secondary" @onclick="GoBack">
                <i class="bi bi-arrow-left"></i> Terug
            </button>
        </div>
    </div>

    @if (!string.IsNullOrEmpty(errorMessage))
    {
        <div class="alert alert-danger">@errorMessage</div>
    }

    @if (!string.IsNullOrEmpty(successMessage))
    {
        <div class="alert alert-success">@successMessage</div>
    }

    @if (isLoading)
    {
        <div class="text-center my-5">
            <div class="spinner-border text-primary" role="status"></div>
            <p class="mt-3">Object laden...</p>
        </div>
    }
    else if (objectDto == null)
    {
        <div class="alert alert-warning">Object niet gevonden.</div>
    }
    else
    {
        <div class="row">
            <!-- Linker kolom: Formulier -->
            <div class="col-md-8">
                <EditForm Model="@objectDto" OnValidSubmit="HandleSubmit">
                    <DataAnnotationsValidator />
                    <ValidationSummary />

                    <div class="card">
                        <div class="card-header">
                            <h5 class="mb-0">Object Informatie</h5>
                        </div>
                        <div class="card-body">
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="mb-3">
                                        <label class="form-label">Bedrijf *</label>
                                        @if (isEditMode)
                                        {
                                            <input type="text" class="form-control" value="@objectDto.CompanyName" readonly />
                                            <small class="text-muted">Bedrijf kan niet gewijzigd worden</small>
                                        }
                                        else
                                        {
                                            <input type="text" class="form-control" value="@objectDto.CompanyName" readonly />
                                        }
                                    </div>

                                    <div class="mb-3">
                                        <label class="form-label">Naam *</label>
                                        <InputText class="form-control" @bind-Value="objectDto.Name" readonly="@(!isEditMode)" />
                                    </div>

                                    <div class="mb-3">
                                        <label class="form-label">Locatie *</label>
                                        <InputText class="form-control" @bind-Value="objectDto.Location" readonly="@(!isEditMode)" />
                                    </div>

                                    <div class="mb-3">
                                        <label class="form-label">Merk</label>
                                        <InputText class="form-control" @bind-Value="objectDto.Brand" readonly="@(!isEditMode)" />
                                    </div>
                                </div>

                                <div class="col-md-6">
                                    <div class="mb-3">
                                        <label class="form-label">Object Code</label>
                                        <input type="text" class="form-control" value="@objectDto.ObjectCode" readonly />
                                        <small class="text-muted">Automatisch gegenereerd</small>
                                    </div>

                                    <div class="mb-3">
                                        <label class="form-label">Model</label>
                                        <InputText class="form-control" @bind-Value="objectDto.Model" readonly="@(!isEditMode)" />
                                    </div>

                                    <div class="mb-3">
                                        <label class="form-label">Serienummer</label>
                                        <InputText class="form-control" @bind-Value="objectDto.SerialNumber" readonly="@(!isEditMode)" />
                                    </div>
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-md-4">
                                    <div class="mb-3">
                                        <label class="form-label">Installatie Datum</label>
                                        @if (isEditMode)
                                        {
                                            <InputDate class="form-control" @bind-Value="objectDto.InstallationDate" />
                                        }
                                        else
                                        {
                                            <input type="text" class="form-control"
                                                   value="@(objectDto.InstallationDate?.ToString("dd-MM-yyyy") ?? "-")" readonly />
                                        }
                                    </div>
                                </div>

                                <div class="col-md-4">
                                    <div class="mb-3">
                                        <label class="form-label">Laatste Onderhoud</label>
                                        @if (isEditMode)
                                        {
                                            <InputDate class="form-control" @bind-Value="objectDto.LastMaintenance" />
                                        }
                                        else
                                        {
                                            <input type="text" class="form-control"
                                                   value="@(objectDto.LastMaintenance?.ToString("dd-MM-yyyy") ?? "-")" readonly />
                                        }
                                    </div>
                                </div>

                                <div class="col-md-4">
                                    <div class="mb-3">
                                        <label class="form-label">Volgend Onderhoud</label>
                                        @if (isEditMode)
                                        {
                                            <InputDate class="form-control" @bind-Value="objectDto.NextMaintenance" />
                                        }
                                        else
                                        {
                                            var isOverdue = objectDto.NextMaintenance.HasValue && objectDto.NextMaintenance.Value < DateTime.Now;
                                            <input type="text" class="form-control @(isOverdue ? "text-danger" : "")"
                                                   value="@(objectDto.NextMaintenance?.ToString("dd-MM-yyyy") ?? "-")" readonly />
                                            @if (isOverdue)
                                            {
                                                <small class="text-danger">
                                                    <i class="bi bi-exclamation-triangle"></i> Onderhoud achterstallig!
                                                </small>
                                            }
                                        }
                                    </div>
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-md-6">
                                    <div class="mb-3">
                                        <label class="form-label">Standaard Prioriteit</label>
                                        @if (isEditMode)
                                        {
                                            <InputSelect class="form-select" @bind-Value="objectDto.DefaultPriority">
                                                @foreach (Priority priority in Enum.GetValues(typeof(Priority)))
                                                {
                                                    <option value="@priority">@priority</option>
                                                }
                                            </InputSelect>
                                        }
                                        else
                                        {
                                            <input type="text" class="form-control" value="@objectDto.DefaultPriority" readonly />
                                        }
                                        <small class="text-muted">Wordt gebruikt bij ticket aanmaak via QR scan</small>
                                    </div>
                                </div>

                                <div class="col-md-6">
                                    <div class="mb-3">
                                        <label class="form-label">Standaard Reactietijd</label>
                                        @if (isEditMode)
                                        {
                                            <InputSelect class="form-select" @bind-Value="objectDto.DefaultReactionTime">
                                                @foreach (ReactionTime reactionTime in Enum.GetValues(typeof(ReactionTime)))
                                                {
                                                    <option value="@reactionTime">@reactionTime</option>
                                                }
                                            </InputSelect>
                                        }
                                        else
                                        {
                                            <input type="text" class="form-control" value="@objectDto.DefaultReactionTime" readonly />
                                        }
                                        <small class="text-muted">Wordt gebruikt bij ticket aanmaak via QR scan</small>
                                    </div>
                                </div>
                            </div>

                            <div class="mb-3">
                                <label class="form-label">Beschrijving</label>
                                <InputTextArea class="form-control" @bind-Value="objectDto.Description" rows="4" readonly="@(!isEditMode)" />
                            </div>

                            @if (isEditMode)
                            {
                                <div class="d-flex gap-2">
                                    <button type="submit" class="btn btn-primary" disabled="@isSaving">
                                        @if (isSaving)
                                        {
                                            <span class="spinner-border spinner-border-sm me-2"></span>
                                        }
                                        <i class="bi bi-save"></i> Opslaan
                                    </button>
                                    <button type="button" class="btn btn-secondary" @onclick="CancelEdit">
                                        <i class="bi bi-x-circle"></i> Annuleren
                                    </button>
                                </div>
                            }
                        </div>
                    </div>
                </EditForm>
            </div>

            <!-- Rechter kolom: QR Code en Acties -->
            <div class="col-md-4">
                <!-- QR Code Card -->
                <div class="card mb-3">
                    <div class="card-header">
                        <h5 class="mb-0">QR Code</h5>
                    </div>
                    <div class="card-body text-center">
                        @if (!string.IsNullOrEmpty(qrCodeBase64))
                        {
                            <img src="@qrCodeBase64" alt="QR Code" class="img-fluid mb-3" style="max-width: 250px;" />
                            <div class="d-grid gap-2">
                                <button class="btn btn-primary" @onclick="DownloadQRCode">
                                    <i class="bi bi-download"></i> Download QR Code
                                </button>
                                <button class="btn btn-outline-primary" @onclick="PrintQRCode">
                                    <i class="bi bi-printer"></i> Print QR Code
                                </button>
                            </div>
                        }
                        else
                        {
                            <p class="text-muted">QR code wordt geladen...</p>
                        }
                    </div>
                </div>

                <!-- Acties Card -->
                <div class="card">
                    <div class="card-header">
                        <h5 class="mb-0">Snelle Acties</h5>
                    </div>
                    <div class="card-body d-grid gap-2">
                        <button class="btn btn-success" @onclick="CreateTicket">
                            <i class="bi bi-ticket-perforated"></i> Nieuw Ticket Aanmaken
                        </button>
                        <button class="btn btn-info" @onclick="ViewTickets">
                            <i class="bi bi-list-ul"></i> Bekijk Alle Tickets
                        </button>
                        @if (!isEditMode)
                        {
                            <button class="btn btn-danger" @onclick="ShowDeleteConfirmation">
                                <i class="bi bi-trash"></i> Object Verwijderen
                            </button>
                        }
                    </div>
                </div>

                <!-- Info Card -->
                <div class="card mt-3">
                    <div class="card-header">
                        <h5 class="mb-0">Object Informatie</h5>
                    </div>
                    <div class="card-body">
                        <p class="mb-2">
                            <strong>Object Code:</strong><br />
                            <span class="font-monospace">@objectDto.ObjectCode</span>
                        </p>
                        <p class="mb-2">
                            <strong>Bedrijf:</strong><br />
                            @objectDto.CompanyName
                        </p>
                        <p class="mb-0">
                            <strong>Locatie:</strong><br />
                            @objectDto.Location
                        </p>
                    </div>
                </div>
            </div>
        </div>
    }
</div>

<!-- Delete Confirmation Modal -->
@if (showDeleteConfirmation)
{
    <div class="modal fade show d-block" tabindex="-1" style="background-color: rgba(0,0,0,0.5);">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Object Verwijderen</h5>
                    <button type="button" class="btn-close" @onclick="CancelDelete"></button>
                </div>
                <div class="modal-body">
                    <p>Weet je zeker dat je <strong>@objectDto?.Name</strong> wilt verwijderen?</p>
                    <p class="text-danger">
                        <i class="bi bi-exclamation-triangle"></i> Deze actie kan niet ongedaan worden gemaakt.
                    </p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" @onclick="CancelDelete">Annuleren</button>
                    <button type="button" class="btn btn-danger" @onclick="ConfirmDelete" disabled="@isDeleting">
                        @if (isDeleting)
                        {
                            <span class="spinner-border spinner-border-sm me-2"></span>
                        }
                        Verwijderen
                    </button>
                </div>
            </div>
        </div>
    </div>
}

@code {
    [Parameter] public int ObjectId { get; set; }

    private ObjectDto? objectDto;
    private string qrCodeBase64 = string.Empty;

    private bool isLoading = true;
    private bool isSaving = false;
    private bool isEditMode = false;
    private bool isDeleting = false;
    private bool showDeleteConfirmation = false;
    private string errorMessage = string.Empty;
    private string successMessage = string.Empty;

    protected override async Task OnInitializedAsync()
    {
        isEditMode = Navigation.Uri.Contains("/edit/");
        await LoadObject();

        if (!isEditMode && objectDto != null)
        {
            GenerateQRCode();
        }
    }

    private async Task LoadObject()
    {
        try
        {
            isLoading = true;
            objectDto = await ObjectApiService.GetObjectByIdAsync(ObjectId);
        }
        catch (Exception ex)
        {
            errorMessage = $"Fout bij laden van object: {ex.Message}";
        }
        finally
        {
            isLoading = false;
        }
    }

    private void GenerateQRCode()
    {
        if (objectDto != null)
        {
            // Gebruik de standaard GenerateObjectQRCode methode van de service
            // Dit genereert format: "OBJECT:{ObjectID}"
            qrCodeBase64 = QRCodeService.GenerateObjectQRCode(objectDto.ObjectID);
        }
    }

    private async Task HandleSubmit()
    {
        if (objectDto == null) return;

        isSaving = true;
        errorMessage = successMessage = string.Empty;

        try
        {
            var updateDto = new UpdateObjectDto
                {
                    Name = objectDto.Name,
                    Location = objectDto.Location,
                    Description = objectDto.Description,
                    Brand = objectDto.Brand,
                    Model = objectDto.Model,
                    SerialNumber = objectDto.SerialNumber,
                    LastMaintenance = objectDto.LastMaintenance,
                    NextMaintenance = objectDto.NextMaintenance,
                    DefaultPriority = objectDto.DefaultPriority,
                    DefaultReactionTime = objectDto.DefaultReactionTime,
                    ChangedBy = "Gebruiker" // TODO: Vervang met echte gebruikersnaam
                };

            var result = await ObjectApiService.UpdateObjectAsync(objectDto.ObjectID, updateDto);

            if (result != null)
            {
                objectDto = result;
                successMessage = "Object succesvol bijgewerkt!";
                isEditMode = false;
                await LoadObject();
            }
        }
        catch (Exception ex)
        {
            errorMessage = $"Fout bij opslaan: {ex.Message}";
        }
        finally
        {
            isSaving = false;
        }
    }

    private void EnableEditMode()
    {
        isEditMode = true;
    }

    private async Task CancelEdit()
    {
        isEditMode = false;
        await LoadObject();
    }

    private void DownloadQRCode()
    {
        // Implementeer download functionaliteit
        errorMessage = "Download functionaliteit wordt binnenkort toegevoegd";
    }

    private void PrintQRCode()
    {
        // Implementeer print functionaliteit
        errorMessage = "Print functionaliteit wordt binnenkort toegevoegd";
    }

    private void CreateTicket()
    {
        Navigation.NavigateTo($"/ticket/create?objectId={ObjectId}");
    }

    private void ViewTickets()
    {
        Navigation.NavigateTo($"/tickets?objectId={ObjectId}");
    }

    private void ShowDeleteConfirmation()
    {
        showDeleteConfirmation = true;
    }

    private void CancelDelete()
    {
        showDeleteConfirmation = false;
    }

    private async Task ConfirmDelete()
    {
        if (objectDto == null) return;

        isDeleting = true;
        errorMessage = string.Empty;

        try
        {
            bool success = await ObjectApiService.DeleteObjectAsync(objectDto.ObjectID);

            if (success)
            {
                Navigation.NavigateTo("/objects");
            }
            else
            {
                errorMessage = "Fout bij verwijderen van object.";
            }
        }
        catch (Exception ex)
        {
            errorMessage = $"Fout bij verwijderen: {ex.Message}";
        }
        finally
        {
            isDeleting = false;
            showDeleteConfirmation = false;
        }
    }

    private void GoBack()
    {
        Navigation.NavigateTo("/objects");
    }
}

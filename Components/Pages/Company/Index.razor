@page "/company"
@using Microsoft.AspNetCore.Components.QuickGrid
@using ZorgmeldSysteem.Blazor.Models.DTOs.Company
@using ZorgmeldSysteem.Blazor.Services.Api
@using ZorgmeldSysteem.Blazor.Components.Common
@using ZorgmeldSysteem.Blazor.ViewModels.Company
@inject CompanyApiService CompanyApiService
@inject NavigationManager Navigation
@implements IDisposable
@rendermode InteractiveServer

<PageTitle>Bedrijven Overzicht</PageTitle>

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h3>Bedrijven Overzicht</h3>
        <button class="btn btn-primary" @onclick="GoToCreateCompany">
            <i class="bi bi-plus-circle"></i> Nieuw Bedrijf
        </button>
    </div>

    <AlertMessage Message="@viewModel.ErrorMessage" Type="danger" Icon="exclamation-triangle" />
    <AlertMessage Message="@viewModel.SuccessMessage" Type="success" Icon="check-circle" Dismissible="true" />

    @if (viewModel.IsLoading)
    {
        <LoadingSpinner Message="Bedrijven laden..." />
    }
    else
    {
        <!-- Filter sectie -->
        <div class="card mb-4">
            <div class="card-body">
                <div class="row g-3">
                    <div class="col-md-6">
                        <label class="form-label">Zoeken</label>
                        <input type="text" class="form-control"
                               value="@viewModel.SearchQuery"
                               @oninput="@(e => OnSearchChanged(e.Value?.ToString() ?? string.Empty))"
                               placeholder="Zoek op naam, email, stad of contactpersoon..." />
                    </div>
                    <div class="col-md-3">
                        <label class="form-label">Type</label>
                        <select class="form-select" 
                                value="@viewModel.FilterIsExternal"
                                @onchange="@(e => OnTypeFilterChanged(e.Value?.ToString() ?? string.Empty))">
                            <option value="">Alle bedrijven</option>
                            <option value="false">Intern</option>
                            <option value="true">Extern</option>
                        </select>
                    </div>
                    <div class="col-md-3">
                        <label class="form-label">&nbsp;</label>
                        <button class="btn btn-secondary w-100" @onclick="ClearFilters">
                            <i class="bi bi-x-circle"></i> Reset Filters
                        </button>
                    </div>
                </div>
            </div>
        </div>

        <!-- QuickGrid -->
        <div class="card">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-center mb-3">
                    <p class="text-muted mb-0">
                        <i class="bi bi-filter"></i> @viewModel.GetFilteredCompanies().Count van @viewModel.AllCompanies.Count bedrijven
                    </p>
                    <div>
                        <label class="me-2">Items per pagina:</label>
                        <select class="form-select form-select-sm d-inline-block" style="width: auto;"
                                @bind="@pagination.ItemsPerPage" @bind:event="onchange">
                            <option value="5">5</option>
                            <option value="10">10</option>
                            <option value="25">25</option>
                            <option value="50">50</option>
                        </select>
                    </div>
                </div>

                <QuickGrid Items="@viewModel.GetFilteredCompanies().AsQueryable()" Pagination="@pagination" Class="table table-hover">
                    <PropertyColumn Property="@(c => c.Name)" Title="Bedrijfsnaam" Sortable="true" />

                    <TemplateColumn Title="Type" Sortable="true"
                                    SortBy="@(GridSort<CompanyDto>.ByAscending(c => c.IsExternal))">
                        @if (context.IsExternal)
                        {
                            <span class="badge bg-warning text-dark">Extern</span>
                        }
                        else
                        {
                            <span class="badge bg-primary">Intern</span>
                        }
                    </TemplateColumn>

                    <PropertyColumn Property="@(c => c.Email)" Title="Email" Sortable="true" />

                    <PropertyColumn Property="@(c => c.Phonenumber)" Title="Telefoonnummer" Sortable="true" />

                    <PropertyColumn Property="@(c => c.City)" Title="Plaats" Sortable="true" />

                    <TemplateColumn Title="Contactpersoon" Sortable="true"
                                    SortBy="@(GridSort<CompanyDto>.ByAscending(c => c.Contact ?? ""))">
                        @(context.Contact ?? "-")
                    </TemplateColumn>

                    <TemplateColumn Title="Acties">
                        <div class="btn-group btn-group-sm" role="group">
                            <button class="btn btn-outline-primary"
                                    @onclick="() => ViewCompany(context.CompanyID)"
                                    title="Bekijken">
                                <i class="bi bi-eye"></i>
                            </button>
                            <button class="btn btn-outline-warning"
                                    @onclick="() => EditCompany(context.CompanyID)"
                                    title="Bewerken">
                                <i class="bi bi-pencil"></i>
                            </button>
                            <button class="btn btn-outline-danger"
                                    @onclick="() => viewModel.ShowDeleteConfirmation(context)"
                                    title="Verwijderen">
                                <i class="bi bi-trash"></i>
                            </button>
                        </div>
                    </TemplateColumn>
                </QuickGrid>

                <Paginator State="@pagination" />
            </div>
        </div>
    }
</div>

<ConfirmDialog 
    Show="@(viewModel.CompanyToDelete != null)"
    Title="Bedrijf Verwijderen"
    Message="@($"Weet je zeker dat je {viewModel.CompanyToDelete?.Name} wilt verwijderen? Deze actie kan niet ongedaan worden gemaakt.")"
    ConfirmText="Verwijderen"
    CancelText="Annuleren"
    ConfirmButtonType="danger"
    Icon="exclamation-triangle"
    IconColor="danger"
    IsProcessing="@viewModel.IsDeleting"
    OnConfirm="ConfirmDelete"
    OnCancel="viewModel.CancelDelete" />

<style>
    .quickgrid {
        font-size: 0.95rem;
    }

    .quickgrid th {
        background-color: #f8f9fa;
        font-weight: 600;
    }

    .table-hover tbody tr:hover {
        background-color: #f5f5f5;
    }
</style>

@code {
    private CompaniesViewModel viewModel = new();
    private PaginationState pagination = new PaginationState { ItemsPerPage = 10 };

    protected override async Task OnInitializedAsync()
    {
        // Subscribe op state changes zodat UI update bij wijzigingen
        viewModel.OnStateChanged += StateHasChanged;
        
        // Laad alle bedrijven
        await viewModel.LoadCompaniesAsync(() => CompanyApiService.GetAllCompaniesAsync());
    }

    // ==================== FILTER EVENT HANDLERS ====================
    
    private void OnSearchChanged(string value)
    {
        viewModel.SearchQuery = value;
        StateHasChanged();
    }

    private void OnTypeFilterChanged(string value)
    {
        viewModel.FilterIsExternal = value;
        StateHasChanged();
    }

    private void ClearFilters()
    {
        viewModel.ClearFilters();
        StateHasChanged();
    }

    // ==================== NAVIGATION ====================

    private void ViewCompany(int companyId)
    {
        Navigation.NavigateTo($"/company/{companyId}");
    }

    private void EditCompany(int companyId)
    {
        Navigation.NavigateTo($"/company/{companyId}");
    }

    private void GoToCreateCompany()
    {
        Navigation.NavigateTo("/company/create");
    }

    // ==================== DELETE ====================

    private async Task ConfirmDelete()
    {
        await viewModel.DeleteCompanyAsync((id) => CompanyApiService.DeleteCompanyAsync(id));
    }

    // ==================== CLEANUP ====================

    public void Dispose()
    {
        viewModel.OnStateChanged -= StateHasChanged;
    }
}
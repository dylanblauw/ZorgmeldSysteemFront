@page "/Ticket"
@attribute [Authorize(Roles = "Fixility Admin,Bedrijfsbeheerder,Monteur,Melder")]

@using Microsoft.AspNetCore.Authorization
@using Microsoft.AspNetCore.Components.QuickGrid
@using ZorgmeldSysteem.Blazor.Models.DTOs.Ticket
@using ZorgmeldSysteem.Blazor.Models.Enums
@using ZorgmeldSysteem.Blazor.Services
@using ZorgmeldSysteem.Blazor.Services.Auth
@using ZorgmeldSysteem.Blazor.Services.Helpers
@using ZorgmeldSysteem.Blazor.ViewModels.Ticket
@using ZorgmeldSysteem.Blazor.Components.Common
@inject Services.Api.TicketApiService TicketApiService
@inject AuthorizationService AuthService
@inject TicketDisplayService DisplayService
@inject NavigationManager Navigation
@implements IDisposable
@rendermode InteractiveServer

<PageTitle>Tickets Overzicht</PageTitle>

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h3>Tickets Overzicht</h3>

        <!-- Alleen Admin, Manager en Reporter mogen tickets aanmaken -->
        <AuthorizeView Roles="Fixility Admin,Bedrijfsbeheerder,Melder">
            <Authorized>
                <button class="btn btn-primary" @onclick="GoToCreateTicket">
                    <i class="bi bi-plus-circle"></i> Nieuw Ticket
                </button>
            </Authorized>
        </AuthorizeView>
    </div>

    <!-- 🔍 DEBUG INFO - TIJDELIJK! -->
    @if (!string.IsNullOrEmpty(debugInfo))
    {
        <div class="alert alert-warning alert-dismissible fade show">
            <strong>🔍 DEBUG INFO:</strong><br />
            <pre style="margin: 0; white-space: pre-wrap;">@debugInfo</pre>
            <button type="button" class="btn-close" @onclick="() => debugInfo = string.Empty"></button>
        </div>
    }

    <!-- Info message voor Monteurs -->
    @if (showMechanicInfo)
    {
        <div class="alert alert-info alert-dismissible fade show" role="alert">
            <i class="bi bi-info-circle"></i>
            <strong>Let op:</strong> Je ziet alleen tickets die aan jou zijn toegewezen.
            <button type="button" class="btn-close" @onclick="() => showMechanicInfo = false"></button>
        </div>
    }

    @if (!string.IsNullOrEmpty(viewModel.ErrorMessage))
    {
        <div class="alert alert-danger" role="alert">
            @viewModel.ErrorMessage
        </div>
    }

    @if (viewModel.IsLoading)
    {
        <LoadingSpinner Message="Tickets laden..." />
    }
    else
    {
        <!-- Filter sectie -->
        <div class="card mb-4">
            <div class="card-body">
                <div class="row g-3">
                    <div class="col-md-3">
                        <label class="form-label">Zoeken</label>
                        <input type="text" class="form-control"
                               @bind="viewModel.SearchQuery"
                               @bind:event="oninput"
                               placeholder="Zoek op code, beschrijving of bedrijf..." />
                    </div>
                    <div class="col-md-3">
                        <label class="form-label">Status</label>
                        <select class="form-select" @bind="viewModel.FilterStatus" @bind:event="onchange">
                            <option value="">Alle statussen</option>
                            @foreach (TicketStatus status in Enum.GetValues(typeof(TicketStatus)))
                            {
                                <option value="@((int)status)">@DisplayService.GetStatusDisplayName(status)</option>
                            }
                        </select>
                    </div>
                    <div class="col-md-3">
                        <label class="form-label">Prioriteit</label>
                        <select class="form-select" @bind="viewModel.FilterPriority" @bind:event="onchange">
                            <option value="">Alle prioriteiten</option>
                            @foreach (Priority priority in Enum.GetValues(typeof(Priority)))
                            {
                                <option value="@((int)priority)">@DisplayService.GetPriorityDisplayName(priority)</option>
                            }
                        </select>
                    </div>
                    <div class="col-md-3">
                        <label class="form-label">&nbsp;</label>
                        <button class="btn btn-secondary w-100" @onclick="viewModel.ClearFilters">
                            <i class="bi bi-x-circle"></i> Reset Filters
                        </button>
                    </div>
                </div>

                <!-- Actieve filters tonen -->
                @if (viewModel.HasActiveFilters())
                {
                    <div class="mt-3">
                        <small class="text-muted">
                            Actieve filters:
                            @if (!string.IsNullOrWhiteSpace(viewModel.SearchQuery))
                            {
                                <span class="badge bg-info me-1">Zoekterm: @viewModel.SearchQuery</span>
                            }
                            @if (!string.IsNullOrWhiteSpace(viewModel.FilterStatus))
                            {
                                <span class="badge bg-info me-1">Status: @DisplayService.GetStatusDisplayName((TicketStatus)int.Parse(viewModel.FilterStatus))</span>
                            }
                            @if (!string.IsNullOrWhiteSpace(viewModel.FilterPriority))
                            {
                                <span class="badge bg-info me-1">Prioriteit: @DisplayService.GetPriorityDisplayName((Priority)int.Parse(viewModel.FilterPriority))</span>
                            }
                        </small>
                    </div>
                }
            </div>
        </div>

        <!-- QuickGrid implementatie -->
        <div class="card">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-center mb-3">
                    <p class="text-muted mb-0">
                        <i class="bi bi-filter"></i> @viewModel.GetFilteredTickets().Count() van @viewModel.AllTickets.Count tickets
                    </p>
                    <div>
                        <label class="me-2">Items per pagina:</label>
                        <select class="form-select form-select-sm d-inline-block" style="width: auto;"
                                @bind="@pagination.ItemsPerPage" @bind:event="onchange">
                            <option value="5">5</option>
                            <option value="10">10</option>
                            <option value="25">25</option>
                            <option value="50">50</option>
                        </select>
                    </div>
                </div>

                <QuickGrid Items="@viewModel.GetFilteredTickets()" Pagination="@pagination" Class="table">

                    <!-- Spoed indicator kolom -->
                    <TemplateColumn Title="!" Sortable="true"
                                    SortBy="@(GridSort<TicketDto>.ByDescending(t => t.IsUrgent))">
                        @if (context.IsUrgent)
                        {
                            <span class="badge bg-danger fw-bold pulse-urgent" title="Spoedticket">
                                !
                            </span>
                        }
                    </TemplateColumn>

                    <PropertyColumn Property="@(t => t.TicketCode)" Title="Ticket Code" Sortable="true">
                        <ColumnOptions>
                            <div class="search-box">
                                <input type="text" @bind="viewModel.CodeFilter" @bind:event="oninput"
                                       placeholder="Filter code..." class="form-control form-control-sm" />
                            </div>
                        </ColumnOptions>
                    </PropertyColumn>

                    <PropertyColumn Property="@(t => t.Description)" Title="Beschrijving" Sortable="true" />

                    <PropertyColumn Property="@(t => t.CompanyName)" Title="Bedrijf" Sortable="true" />

                    <!-- 🔍 DEBUG: Toon MechanicID -->
                    <PropertyColumn Property="@(t => t.MechanicID)" Title="DEBUG: MechID" Sortable="true" />

                    <TemplateColumn Title="Status" Sortable="true"
                                    SortBy="@(GridSort<TicketDto>.ByAscending(t => t.Status))">
                        <span class="badge @DisplayService.GetStatusBadgeClass(context.Status)">
                            @DisplayService.GetStatusDisplayName(context.Status)
                        </span>
                    </TemplateColumn>

                    <TemplateColumn Title="Prioriteit" Sortable="true"
                                    SortBy="@(GridSort<TicketDto>.ByAscending(t => t.Priority))">
                        <span class="badge @DisplayService.GetPriorityBadgeClass(context.Priority)">
                            <i class="bi @DisplayService.GetPriorityIcon(context.Priority)"></i>
                            @DisplayService.GetPriorityDisplayName(context.Priority)
                        </span>
                    </TemplateColumn>

                    <PropertyColumn Property="@(t => t.CreatedOn)" Title="Aangemaakt"
                                    Format="dd-MM-yyyy HH:mm" Sortable="true" />

                    <TemplateColumn Title="Acties">
                        <div class="btn-group btn-group-sm" role="group">
                            <button class="btn btn-outline-primary"
                                    @onclick="() => ViewTicket(context.TicketID)"
                                    title="Bekijken">
                                <i class="bi bi-eye"></i>
                            </button>
                            <button class="btn btn-outline-warning"
                                    @onclick="() => EditTicket(context.TicketID)"
                                    title="Bewerken">
                                <i class="bi bi-pencil"></i>
                            </button>
                        </div>
                    </TemplateColumn>
                </QuickGrid>

                <Paginator State="@pagination" />
            </div>
        </div>
    }
</div>

<style>
    .search-box {
        min-width: 100px;
    }

    .quickgrid {
        font-size: 0.95rem;
    }

        .quickgrid th {
            background-color: #f8f9fa;
            font-weight: 600;
        }

        .quickgrid tbody tr:hover {
            background-color: #f5f5f5;
            cursor: pointer;
        }

    /* Spoed ticket badge styling met subtiele pulse animatie */
    .pulse-urgent {
        animation: pulse-urgent 2s ease-in-out infinite;
    }

    @@keyframes pulse-urgent {
        0%, 100% {
            opacity: 1;
            transform: scale(1);
        }

        50% {
            opacity: 0.8;
            transform: scale(1.05);
        }
    }
</style>

@code {
    private TicketsViewModel viewModel = new();
    private PaginationState pagination = new PaginationState { ItemsPerPage = 10 };
    private bool showMechanicInfo = false;
    private string debugInfo = "";  // 🔍 DEBUG

    protected override async Task OnInitializedAsync()
    {
        // Subscribe op state changes van de ViewModel
        viewModel.OnStateChanged += StateHasChanged;

        // Check of user een monteur is voor info message
        showMechanicInfo = await AuthService.IsMechanicAsync();

        // 🔍 DEBUG: Collect info
        var currentUser = await AuthService.GetCurrentUserAsync();
        var isAdmin = await AuthService.IsAdminAsync();
        var isManager = await AuthService.IsManagerAsync();
        var isMechanic = await AuthService.IsMechanicAsync();
        var isReporter = await AuthService.IsReporterAsync();
        var userId = await AuthService.GetUserIdAsync();
        var companyIds = await AuthService.GetUserCompanyIdsAsync();

        debugInfo = $"User: {currentUser?.FullName} (ID: {userId})\n";
        debugInfo += $"Email: {currentUser?.Email}\n";
        debugInfo += $"Role: {currentUser?.UserLevelName}\n";
        debugInfo += $"IsAdmin: {isAdmin}, IsManager: {isManager}, IsMechanic: {isMechanic}, IsReporter: {isReporter}\n";
        debugInfo += $"CompanyIDs: {string.Join(", ", companyIds)}\n";

        // Laad de tickets via de ViewModel MET role-based filtering
        await viewModel.LoadTicketsAsync(async () =>
        {
            // Haal ALLE tickets op van de API
            var allTickets = await TicketApiService.GetAllTicketsAsync();

            debugInfo += $"\nTotal tickets from API: {allTickets.Count}\n";
            debugInfo += $"Tickets with MechanicID:\n";
            foreach (var t in allTickets.Take(5))  // Eerste 5 voor debug
            {
                debugInfo += $"  - {t.TicketCode}: MechanicID={t.MechanicID?.ToString() ?? "NULL"}, Company={t.CompanyName}\n";
            }

            // Filter op basis van gebruikersrol
            var filtered = await FilterTicketsByRole(allTickets);

            debugInfo += $"\nAfter filtering: {filtered.Count} tickets\n";

            return filtered;
        });

        StateHasChanged();  // Force UI update om debug info te tonen
    }

    /// <summary>
    /// Filter tickets op basis van gebruikersrol
    /// </summary>
    private async Task<List<TicketDto>> FilterTicketsByRole(List<TicketDto> tickets)
    {
        // Admin ziet ALLES
        if (await AuthService.IsAdminAsync())
        {
            debugInfo += "Filter: User is Admin - showing ALL tickets\n";
            return tickets;
        }

        var userId = await AuthService.GetUserIdAsync();
        var userCompanyIds = await AuthService.GetUserCompanyIdsAsync();

        // Monteur: ALLEEN tickets toegewezen aan deze monteur
        if (await AuthService.IsMechanicAsync())
        {
            debugInfo += $"Filter: User is Mechanic (UserID={userId})\n";
            debugInfo += $"Filtering for tickets where MechanicID == {userId}\n";

            var filtered = tickets
                .Where(t => t.MechanicID.HasValue && t.MechanicID.Value == userId)
                .ToList();

            debugInfo += $"Found {filtered.Count} matching tickets\n";

            return filtered;
        }

        // Manager/Reporter: ALLEEN tickets van eigen bedrijf(ven)
        debugInfo += $"Filter: User is Manager/Reporter\n";
        debugInfo += $"Filtering for CompanyIDs: {string.Join(", ", userCompanyIds)}\n";

        return tickets
            .Where(t => userCompanyIds.Contains(t.CompanyID))
            .ToList();
    }

    private void ViewTicket(int ticketId)
    {
        Navigation.NavigateTo($"/ticket/{ticketId}");
    }

    private void EditTicket(int ticketId)
    {
        Navigation.NavigateTo($"/ticket/edit/{ticketId}");
    }

    private void GoToCreateTicket()
    {
        Navigation.NavigateTo("ticket/create");
    }

    public void Dispose()
    {
        // Unsubscribe om memory leaks te voorkomen
        viewModel.OnStateChanged -= StateHasChanged;
    }
}

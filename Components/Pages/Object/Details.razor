@page "/object/{ObjectId:int}"
@page "/object/edit/{ObjectId:int}"
@using ZorgmeldSysteem.Blazor.ViewModels.Object
@using ZorgmeldSysteem.Blazor.Components.Common
@using ZorgmeldSysteem.Blazor.Models.DTOs.Object
@using ZorgmeldSysteem.Blazor.Models.Enums
@using ZorgmeldSysteem.Blazor.Services.Api
@using ZorgmeldSysteem.Blazor.Services.Business
@inject ObjectApiService ObjectApiService
@inject QRCodeService QRCodeService
@inject NavigationManager Navigation
@implements IDisposable
@rendermode InteractiveServer

<PageTitle>@(viewModel.Object?.ObjectCode ?? "Object Details")</PageTitle>

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h3>@(viewModel.IsEditMode ? "Object Bewerken" : "Object Details")</h3>
        <div>
            @if (!viewModel.IsEditMode && viewModel.Object != null)
            {
                <button class="btn btn-warning me-2" @onclick="viewModel.EnableEditMode">
                    <i class="bi bi-pencil"></i> Bewerken
                </button>
            }
            <button class="btn btn-secondary" @onclick="GoBack">
                <i class="bi bi-arrow-left"></i> Terug
            </button>
        </div>
    </div>

    <AlertMessage Message="@viewModel.ErrorMessage" Type="danger" Icon="exclamation-triangle" />
    <AlertMessage Message="@viewModel.SuccessMessage" Type="success" Icon="check-circle" />

    @if (viewModel.IsLoading)
    {
        <LoadingSpinner Message="Object laden..." />
    }
    else if (viewModel.Object == null)
    {
        <div class="alert alert-warning">
            <i class="bi bi-exclamation-triangle"></i> Object niet gevonden.
        </div>
    }
    else
    {
        <div class="row">
            <!-- Linker kolom: Formulier -->
            <div class="col-md-8">
                <EditForm Model="@viewModel.Object" OnValidSubmit="HandleSubmit">
                    <DataAnnotationsValidator />

                    <div class="card mb-3">
                        <div class="card-header">
                            <h5 class="mb-0">Object Informatie</h5>
                        </div>
                        <div class="card-body">
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="mb-3">
                                        <label class="form-label">Bedrijf *</label>
                                        <input type="text" class="form-control" value="@viewModel.Object.CompanyName" readonly />
                                        @if (viewModel.IsEditMode)
                                        {
                                            <small class="text-muted">Bedrijf kan niet gewijzigd worden</small>
                                        }
                                    </div>

                                    <div class="mb-3">
                                        <label class="form-label">Naam *</label>
                                        <InputText class="form-control" @bind-Value="viewModel.Object.Name"
                                                   readonly="@(!viewModel.IsEditMode)" />
                                    </div>

                                    <div class="mb-3">
                                        <label class="form-label">Locatie *</label>
                                        <InputText class="form-control" @bind-Value="viewModel.Object.Location"
                                                   readonly="@(!viewModel.IsEditMode)" />
                                    </div>

                                    <div class="mb-3">
                                        <label class="form-label">Merk</label>
                                        <InputText class="form-control" @bind-Value="viewModel.Object.Brand"
                                                   readonly="@(!viewModel.IsEditMode)" />
                                    </div>
                                </div>

                                <div class="col-md-6">
                                    <div class="mb-3">
                                        <label class="form-label">Object Code</label>
                                        <input type="text" class="form-control" value="@viewModel.Object.ObjectCode" readonly />
                                        <small class="text-muted">Automatisch gegenereerd</small>
                                    </div>

                                    <div class="mb-3">
                                        <label class="form-label">Model</label>
                                        <InputText class="form-control" @bind-Value="viewModel.Object.Model"
                                                   readonly="@(!viewModel.IsEditMode)" />
                                    </div>

                                    <div class="mb-3">
                                        <label class="form-label">Serienummer</label>
                                        <InputText class="form-control" @bind-Value="viewModel.Object.SerialNumber"
                                                   readonly="@(!viewModel.IsEditMode)" />
                                    </div>
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-md-4">
                                    <div class="mb-3">
                                        <label class="form-label">Installatie Datum</label>
                                        @if (viewModel.IsEditMode)
                                        {
                                            <InputDate class="form-control" @bind-Value="viewModel.Object.InstallationDate" />
                                        }
                                        else
                                        {
                                            <input type="text" class="form-control"
                                                   value="@(viewModel.Object.InstallationDate?.ToString("dd-MM-yyyy") ?? "-")" readonly />
                                        }
                                    </div>
                                </div>

                                <div class="col-md-4">
                                    <div class="mb-3">
                                        <label class="form-label">Laatste Onderhoud</label>
                                        @if (viewModel.IsEditMode)
                                        {
                                            <InputDate class="form-control" @bind-Value="viewModel.Object.LastMaintenance" />
                                        }
                                        else
                                        {
                                            <input type="text" class="form-control"
                                                   value="@(viewModel.Object.LastMaintenance?.ToString("dd-MM-yyyy") ?? "-")" readonly />
                                        }
                                    </div>
                                </div>

                                <div class="col-md-4">
                                    <div class="mb-3">
                                        <label class="form-label">Volgend Onderhoud</label>
                                        @if (viewModel.IsEditMode)
                                        {
                                            <InputDate class="form-control" @bind-Value="viewModel.Object.NextMaintenance" />
                                        }
                                        else
                                        {
                                            var isOverdue = viewModel.Object.NextMaintenance.HasValue &&
                                            viewModel.Object.NextMaintenance.Value < DateTime.Now;
                                            <input type="text" class="form-control @(isOverdue ? "text-danger" : "")"
                                                   value="@(viewModel.Object.NextMaintenance?.ToString("dd-MM-yyyy") ?? "-")" readonly />
                                            @if (isOverdue)
                                            {
                                                <small class="text-danger">
                                                    <i class="bi bi-exclamation-triangle"></i> Onderhoud achterstallig!
                                                </small>
                                            }
                                        }
                                    </div>
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-md-6">
                                    <div class="mb-3">
                                        <label class="form-label">Standaard Prioriteit</label>
                                        @if (viewModel.IsEditMode)
                                        {
                                            <InputSelect class="form-select" @bind-Value="viewModel.Object.DefaultPriority">
                                                @foreach (Priority priority in Enum.GetValues(typeof(Priority)))
                                                {
                                                    <option value="@priority">@priority</option>
                                                }
                                            </InputSelect>
                                        }
                                        else
                                        {
                                            <input type="text" class="form-control" value="@viewModel.Object.DefaultPriority" readonly />
                                        }
                                        <small class="text-muted">Wordt gebruikt bij ticket aanmaak via QR scan</small>
                                    </div>
                                </div>

                                <div class="col-md-6">
                                    <div class="mb-3">
                                        <label class="form-label">Standaard Reactietijd</label>
                                        @if (viewModel.IsEditMode)
                                        {
                                            <InputSelect class="form-select" @bind-Value="viewModel.Object.DefaultReactionTime">
                                                @foreach (ReactionTime reactionTime in Enum.GetValues(typeof(ReactionTime)))
                                                {
                                                    <option value="@reactionTime">@reactionTime</option>
                                                }
                                            </InputSelect>
                                        }
                                        else
                                        {
                                            <input type="text" class="form-control" value="@viewModel.Object.DefaultReactionTime" readonly />
                                        }
                                        <small class="text-muted">Wordt gebruikt bij ticket aanmaak via QR scan</small>
                                    </div>
                                </div>
                            </div>

                            <div class="mb-3">
                                <label class="form-label">Beschrijving</label>
                                <InputTextArea class="form-control" @bind-Value="viewModel.Object.Description"
                                               rows="4" readonly="@(!viewModel.IsEditMode)" />
                            </div>

                            @if (viewModel.IsEditMode)
                            {
                                <div class="d-flex gap-2">
                                    <button type="submit" class="btn btn-primary" disabled="@viewModel.IsSaving">
                                        @if (viewModel.IsSaving)
                                        {
                                            <span class="spinner-border spinner-border-sm me-2"></span>
                                        }
                                        <i class="bi bi-save"></i> Opslaan
                                    </button>
                                    <button type="button" class="btn btn-secondary" @onclick="CancelEdit">
                                        <i class="bi bi-x-circle"></i> Annuleren
                                    </button>
                                </div>
                            }
                        </div>
                    </div>
                </EditForm>
            </div>

            <!-- Rechter kolom: Acties -->
            <div class="col-md-4">
                <!-- QR Code Card -->
                <div class="card mb-3">
                    <div class="card-header">
                        <h5 class="mb-0">QR Code</h5>
                    </div>
                    <div class="card-body text-center">
                        @if (!string.IsNullOrEmpty(viewModel.QRCodeBase64))
                        {
                            <img src="@viewModel.QRCodeBase64" alt="QR Code" class="img-fluid mb-3" style="max-width: 250px;" />
                            <div class="d-grid gap-2">
                                <button class="btn btn-primary" @onclick="DownloadQRCode">
                                    <i class="bi bi-download"></i> Download QR Code
                                </button>
                                <button class="btn btn-outline-primary" @onclick="PrintQRCode">
                                    <i class="bi bi-printer"></i> Print QR Code
                                </button>
                            </div>
                        }
                        else
                        {
                            <LoadingSpinner Message="QR code laden..." />
                        }
                    </div>
                </div>

                <!-- Snelle Acties Card -->
                <div class="card mb-3">
                    <div class="card-header">
                        <h5 class="mb-0">Snelle Acties</h5>
                    </div>
                    <div class="card-body d-grid gap-2">
                        <button class="btn btn-success" @onclick="CreateTicket">
                            <i class="bi bi-ticket-perforated"></i> Nieuw Ticket Aanmaken
                        </button>
                        <button class="btn btn-info" @onclick="ViewTickets">
                            <i class="bi bi-list-ul"></i> Bekijk Alle Tickets
                        </button>
                        @if (!viewModel.IsEditMode)
                        {
                            <button class="btn btn-danger" @onclick="viewModel.ShowDeleteDialog">
                                <i class="bi bi-trash"></i> Object Verwijderen
                            </button>
                        }
                    </div>
                </div>

                <!-- Info Card -->
                <div class="card">
                    <div class="card-header">
                        <h5 class="mb-0">Object Informatie</h5>
                    </div>
                    <div class="card-body">
                        <p class="mb-2">
                            <strong>Object Code:</strong><br />
                            <span class="font-monospace">@viewModel.Object.ObjectCode</span>
                        </p>
                        <p class="mb-2">
                            <strong>Bedrijf:</strong><br />
                            @viewModel.Object.CompanyName
                        </p>
                        <p class="mb-0">
                            <strong>Locatie:</strong><br />
                            @viewModel.Object.Location
                        </p>
                    </div>
                </div>
            </div>
        </div>
    }
</div>

<ConfirmDialog Show="@viewModel.ShowDeleteConfirmation"
               Title="Object Verwijderen"
               Message="@($"Weet je zeker dat je {viewModel.Object?.Name} wilt verwijderen?")"
               ConfirmText="Verwijderen"
               ConfirmButtonType="danger"
               Icon="exclamation-triangle"
               IconColor="danger"
               IsProcessing="@viewModel.IsDeleting"
               OnConfirm="ConfirmDelete"
               OnCancel="viewModel.CancelDelete">
    <p class="text-danger">
        <i class="bi bi-exclamation-triangle"></i> Deze actie kan niet ongedaan worden gemaakt.
    </p>
</ConfirmDialog>

@code {
    [Parameter] public int ObjectId { get; set; }
    private ObjectDetailsViewModel viewModel = new();

    protected override async Task OnInitializedAsync()
    {
        if (Navigation.Uri.Contains("/edit/"))
        {
            viewModel.IsEditMode = true;
        }

        viewModel.OnStateChanged += StateHasChanged;
        await viewModel.LoadObjectAsync(() => ObjectApiService.GetObjectByIdAsync(ObjectId));

        if (!viewModel.IsEditMode && viewModel.Object != null)
        {
            GenerateQRCode();
        }
    }

    private void GenerateQRCode()
    {
        if (viewModel.Object != null)
        {
            var qrCodeBase64 = QRCodeService.GenerateObjectQRCode(viewModel.Object.ObjectID);
            viewModel.SetQRCode(qrCodeBase64);
        }
    }

    private async Task HandleSubmit()
    {
        if (viewModel.Object == null) return;

        var updateDto = new UpdateObjectDto
            {
                Name = viewModel.Object.Name,
                Location = viewModel.Object.Location,
                Description = viewModel.Object.Description,
                Brand = viewModel.Object.Brand,
                Model = viewModel.Object.Model,
                SerialNumber = viewModel.Object.SerialNumber,
                LastMaintenance = viewModel.Object.LastMaintenance,
                NextMaintenance = viewModel.Object.NextMaintenance,
                DefaultPriority = viewModel.Object.DefaultPriority,
                DefaultReactionTime = viewModel.Object.DefaultReactionTime,
                ChangedBy = "User" // TODO: Get from auth
            };

        await viewModel.SaveObjectAsync(() => ObjectApiService.UpdateObjectAsync(ObjectId, updateDto));
    }

    private async Task CancelEdit()
    {
        viewModel.CancelEdit();
        await viewModel.LoadObjectAsync(() => ObjectApiService.GetObjectByIdAsync(ObjectId));
    }

    private async Task ConfirmDelete()
    {
        bool success = await viewModel.DeleteObjectAsync(() => ObjectApiService.DeleteObjectAsync(ObjectId));
        if (success)
        {
            Navigation.NavigateTo("/object");
        }
    }

    private void DownloadQRCode()
    {
        viewModel.SetError("Download functionaliteit wordt binnenkort toegevoegd");
    }

    private void PrintQRCode()
    {
        viewModel.SetError("Print functionaliteit wordt binnenkort toegevoegd");
    }

    private void CreateTicket()
    {
        Navigation.NavigateTo($"/ticket/create?objectId={ObjectId}");
    }

    private void ViewTickets()
    {
        Navigation.NavigateTo($"/ticket?objectId={ObjectId}");
    }

    private void GoBack() => Navigation.NavigateTo("/object");

    public void Dispose()
    {
        viewModel.OnStateChanged -= StateHasChanged;
    }
}
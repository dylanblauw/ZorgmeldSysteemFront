@page "/Tickets"
@using Microsoft.AspNetCore.Components.QuickGrid
@using ZorgmeldSysteem.Blazor.Models.DTOs.Ticket
@using ZorgmeldSysteem.Blazor.Models.Enums
@using ZorgmeldSysteem.Blazor.Services
@using ZorgmeldSysteem.Blazor.Services.Helpers
@using ZorgmeldSysteem.Blazor.ViewModels
@inject Services.Api.TicketApiService TicketApiService
@inject TicketDisplayService DisplayService
@inject NavigationManager Navigation
@implements IDisposable
@rendermode InteractiveServer

<PageTitle>Tickets Overzicht</PageTitle>

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h3>Tickets Overzicht</h3>
        <button class="btn btn-primary" @onclick="GoToCreateTicket">
            <i class="bi bi-plus-circle"></i> Nieuw Ticket
        </button>
    </div>

    @if (!string.IsNullOrEmpty(viewModel.ErrorMessage))
    {
        <div class="alert alert-danger" role="alert">
            @viewModel.ErrorMessage
        </div>
    }

    @if (viewModel.IsLoading)
    {
        <div class="text-center my-5">
            <div class="spinner-border text-primary" role="status">
                <span class="visually-hidden">Laden...</span>
            </div>
            <p class="mt-3">Tickets laden...</p>
        </div>
    }
    else
    {
        <!-- Filter sectie -->
        <div class="card mb-4">
            <div class="card-body">
                <div class="row g-3">
                    <div class="col-md-3">
                        <label class="form-label">Zoeken</label>
                        <input type="text" class="form-control"
                               @bind="viewModel.SearchQuery"
                               @bind:event="oninput"
                               placeholder="Zoek op code, beschrijving of bedrijf..." />
                    </div>
                    <div class="col-md-3">
                        <label class="form-label">Status</label>
                        <select class="form-select" @bind="viewModel.FilterStatus" @bind:event="onchange">
                            <option value="">Alle statussen</option>
                            @foreach (TicketStatus status in Enum.GetValues(typeof(TicketStatus)))
                            {
                                <option value="@((int)status)">@DisplayService.GetStatusDisplayName(status)</option>
                            }
                        </select>
                    </div>
                    <div class="col-md-3">
                        <label class="form-label">Prioriteit</label>
                        <select class="form-select" @bind="viewModel.FilterPriority" @bind:event="onchange">
                            <option value="">Alle prioriteiten</option>
                            @foreach (Priority priority in Enum.GetValues(typeof(Priority)))
                            {
                                <option value="@((int)priority)">@DisplayService.GetPriorityDisplayName(priority)</option>
                            }
                        </select>
                    </div>
                    <div class="col-md-3">
                        <label class="form-label">&nbsp;</label>
                        <button class="btn btn-secondary w-100" @onclick="viewModel.ClearFilters">
                            <i class="bi bi-x-circle"></i> Reset Filters
                        </button>
                    </div>
                </div>

                <!-- Actieve filters tonen -->
                @if (viewModel.HasActiveFilters())
                {
                    <div class="mt-3">
                        <small class="text-muted">
                            Actieve filters:
                            @if (!string.IsNullOrWhiteSpace(viewModel.SearchQuery))
                            {
                                <span class="badge bg-info me-1">Zoekterm: @viewModel.SearchQuery</span>
                            }
                            @if (!string.IsNullOrWhiteSpace(viewModel.FilterStatus))
                            {
                                <span class="badge bg-info me-1">Status: @DisplayService.GetStatusDisplayName((TicketStatus)int.Parse(viewModel.FilterStatus))</span>
                            }
                            @if (!string.IsNullOrWhiteSpace(viewModel.FilterPriority))
                            {
                                <span class="badge bg-info me-1">Prioriteit: @DisplayService.GetPriorityDisplayName((Priority)int.Parse(viewModel.FilterPriority))</span>
                            }
                        </small>
                    </div>
                }
            </div>
        </div>

        <!-- QuickGrid implementatie -->
        <div class="card">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-center mb-3">
                    <p class="text-muted mb-0">
                        <i class="bi bi-filter"></i> @viewModel.GetFilteredTickets().Count() van @viewModel.AllTickets.Count tickets
                    </p>
                    <div>
                        <label class="me-2">Items per pagina:</label>
                        <select class="form-select form-select-sm d-inline-block" style="width: auto;"
                                @bind="@pagination.ItemsPerPage" @bind:event="onchange">
                            <option value="5">5</option>
                            <option value="10">10</option>
                            <option value="25">25</option>
                            <option value="50">50</option>
                        </select>
                    </div>
                </div>

                <QuickGrid Items="@viewModel.GetFilteredTickets()" Pagination="@pagination" Class="table">

                    <!-- Spoed indicator kolom -->
                    <TemplateColumn Title="!" Sortable="true"
                                    SortBy="@(GridSort<TicketDto>.ByDescending(t => t.IsUrgent))">
                        @if (context.IsUrgent)
                        {
                            <span class="badge bg-danger fw-bold pulse-urgent" title="Spoedticket">
                               !
                            </span>
                        }
                    </TemplateColumn>

                    <PropertyColumn Property="@(t => t.TicketCode)" Title="Ticket Code" Sortable="true">
                        <ColumnOptions>
                            <div class="search-box">
                                <input type="text" @bind="viewModel.CodeFilter" @bind:event="oninput"
                                       placeholder="Filter code..." class="form-control form-control-sm" />
                            </div>
                        </ColumnOptions>
                    </PropertyColumn>

                    <PropertyColumn Property="@(t => t.Description)" Title="Beschrijving" Sortable="true" />

                    <PropertyColumn Property="@(t => t.CompanyName)" Title="Bedrijf" Sortable="true" />

                    <TemplateColumn Title="Status" Sortable="true"
                                    SortBy="@(GridSort<TicketDto>.ByAscending(t => t.Status))">
                        <span class="badge @DisplayService.GetStatusBadgeClass(context.Status)">
                            @DisplayService.GetStatusDisplayName(context.Status)
                        </span>
                    </TemplateColumn>

                    <TemplateColumn Title="Prioriteit" Sortable="true"
                                    SortBy="@(GridSort<TicketDto>.ByAscending(t => t.Priority))">
                        <span class="badge @DisplayService.GetPriorityBadgeClass(context.Priority)">
                            <i class="bi @DisplayService.GetPriorityIcon(context.Priority)"></i>
                            @DisplayService.GetPriorityDisplayName(context.Priority)
                        </span>
                    </TemplateColumn>

                    <PropertyColumn Property="@(t => t.CreatedOn)" Title="Aangemaakt"
                                    Format="dd-MM-yyyy HH:mm" Sortable="true" />

                    <TemplateColumn Title="Acties">
                        <div class="btn-group btn-group-sm" role="group">
                            <button class="btn btn-outline-primary"
                                    @onclick="() => ViewTicket(context.TicketID)"
                                    title="Bekijken">
                                <i class="bi bi-eye"></i>
                            </button>
                            <button class="btn btn-outline-warning"
                                    @onclick="() => EditTicket(context.TicketID)"
                                    title="Bewerken">
                                <i class="bi bi-pencil"></i>
                            </button>
                        </div>
                    </TemplateColumn>
                </QuickGrid>

                <Paginator State="@pagination" />
            </div>
        </div>
    }
</div>

<style>
    .search-box {
        min-width: 100px;
    }

    .quickgrid {
        font-size: 0.95rem;
    }

        .quickgrid th {
            background-color: #f8f9fa;
            font-weight: 600;
        }

        .quickgrid tbody tr:hover {
            background-color: #f5f5f5;
            cursor: pointer;
        }

    /* Spoed ticket badge styling met subtiele pulse animatie */
    .pulse-urgent {
        animation: pulse-urgent 2s ease-in-out infinite;
    }

    @@keyframes pulse-urgent {
        0%, 100% {
            opacity: 1;
            transform: scale(1);
        }

        50% {
            opacity: 0.8;
            transform: scale(1.05);
        }
    }
</style>

@code {
    // Alleen nog state die echt bij de UI hoort
    private TicketsViewModel viewModel = new();
    private PaginationState pagination = new PaginationState { ItemsPerPage = 10 };

    protected override async Task OnInitializedAsync()
    {
        // Subscribe op state changes van de ViewModel
        viewModel.OnStateChanged += StateHasChanged;

        // Laad de tickets via de ViewModel
        await viewModel.LoadTicketsAsync(() => TicketApiService.GetAllTicketsAsync());
    }

    private void ViewTicket(int ticketId)
    {
        Navigation.NavigateTo($"/ticket/{ticketId}");
    }

    private void EditTicket(int ticketId)
    {
        Navigation.NavigateTo($"/ticket/edit/{ticketId}");
    }

    private void GoToCreateTicket()
    {
        Navigation.NavigateTo("ticket/create");
    }

    public void Dispose()
    {
        // Unsubscribe om memory leaks te voorkomen
        viewModel.OnStateChanged -= StateHasChanged;
    }
}

@page "/Tickets"
@using Microsoft.AspNetCore.Components.QuickGrid
@using ZorgmeldSysteem.Blazor.Models.DTOs.Ticket
@using ZorgmeldSysteem.Blazor.Models.Enums
@using ZorgmeldSysteem.Blazor.Services
@inject TicketApiService TicketApiService
@inject NavigationManager Navigation
@rendermode InteractiveServer

<PageTitle>Tickets Overzicht</PageTitle>

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h3>Tickets Overzicht</h3>
        <button class="btn btn-primary" @onclick="GoToCreateTicket">
            <i class="bi bi-plus-circle"></i> Nieuw Ticket
        </button>
    </div>

    @if (!string.IsNullOrEmpty(errorMessage))
    {
        <div class="alert alert-danger" role="alert">
            @errorMessage
        </div>
    }

    @if (isLoading)
    {
        <div class="text-center my-5">
            <div class="spinner-border text-primary" role="status">
                <span class="visually-hidden">Laden...</span>
            </div>
            <p class="mt-3">Tickets laden...</p>
        </div>
    }
    else
    {
        <!-- Filter sectie -->
        <div class="card mb-4">
            <div class="card-body">
                <div class="row g-3">
                    <div class="col-md-3">
                        <label class="form-label">Zoeken</label>
                        <input type="text" class="form-control"
                               @bind="searchQuery"
                               @bind:event="oninput"
                               placeholder="Zoek op code, beschrijving of bedrijf..." />
                    </div>
                    <div class="col-md-3">
                        <label class="form-label">Status</label>
                        <select class="form-select" @bind="filterStatus" @bind:event="onchange">
                            <option value="">Alle statussen</option>
                            @foreach (TicketStatus status in Enum.GetValues(typeof(TicketStatus)))
                            {
                                <option value="@((int)status)">@GetStatusDisplayName(status)</option>
                            }
                        </select>
                    </div>
                    <div class="col-md-3">
                        <label class="form-label">Prioriteit</label>
                        <select class="form-select" @bind="filterPriority" @bind:event="onchange">
                            <option value="">Alle prioriteiten</option>
                            @foreach (Priority priority in Enum.GetValues(typeof(Priority)))
                            {
                                <option value="@((int)priority)">@GetPriorityDisplayName(priority)</option>
                            }
                        </select>
                    </div>
                    <div class="col-md-3">
                        <label class="form-label">&nbsp;</label>
                        <button class="btn btn-secondary w-100" @onclick="ClearFilters">
                            <i class="bi bi-x-circle"></i> Reset Filters
                        </button>
                    </div>
                </div>

                <!-- Actieve filters tonen -->
                @if (HasActiveFilters)
                {
                    <div class="mt-3">
                        <small class="text-muted">
                            Actieve filters:
                            @if (!string.IsNullOrWhiteSpace(searchQuery))
                            {
                                <span class="badge bg-info me-1">Zoekterm: @searchQuery</span>
                            }
                            @if (!string.IsNullOrWhiteSpace(filterStatus))
                            {
                                <span class="badge bg-info me-1">Status: @GetStatusDisplayName((TicketStatus)int.Parse(filterStatus))</span>
                            }
                            @if (!string.IsNullOrWhiteSpace(filterPriority))
                            {
                                <span class="badge bg-info me-1">Prioriteit: @GetPriorityDisplayName((Priority)int.Parse(filterPriority))</span>
                            }
                        </small>
                    </div>
                }
            </div>
        </div>

        <!-- QuickGrid implementatie -->
        <div class="card">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-center mb-3">
                    <p class="text-muted mb-0">
                        <i class="bi bi-filter"></i> @FilteredTickets.Count() van @tickets.Count tickets
                    </p>
                    <div>
                        <label class="me-2">Items per pagina:</label>
                        <select class="form-select form-select-sm d-inline-block" style="width: auto;"
                                @bind="@pagination.ItemsPerPage" @bind:event="onchange">
                            <option value="5">5</option>
                            <option value="10">10</option>
                            <option value="25">25</option>
                            <option value="50">50</option>
                        </select>
                    </div>
                </div>

                <QuickGrid Items="@FilteredTickets" Pagination="@pagination" Class="table">
                    <PropertyColumn Property="@(t => t.TicketCode)" Title="Ticket Code" Sortable="true">
                        <ColumnOptions>
                            <div class="search-box">
                                <input type="text" @bind="codeFilter" @bind:event="oninput"
                                       placeholder="Filter code..." class="form-control form-control-sm" />
                            </div>
                        </ColumnOptions>
                    </PropertyColumn>

                    <PropertyColumn Property="@(t => t.Description)" Title="Beschrijving" Sortable="true" />

                    <PropertyColumn Property="@(t => t.CompanyName)" Title="Bedrijf" Sortable="true" />

                    <TemplateColumn Title="Status" Sortable="true"
                                    SortBy="@(GridSort<TicketDto>.ByAscending(t => t.Status))">
                        <span class="badge @GetStatusBadgeClass(context.Status)">
                            @GetStatusDisplayName(context.Status)
                        </span>
                    </TemplateColumn>

                    <TemplateColumn Title="Prioriteit" Sortable="true"
                                    SortBy="@(GridSort<TicketDto>.ByAscending(t => t.Priority))">
                        <span class="badge @GetPriorityBadgeClass(context.Priority)">
                            <i class="bi @GetPriorityIcon(context.Priority)"></i>
                            @GetPriorityDisplayName(context.Priority)
                        </span>
                    </TemplateColumn>

                    <PropertyColumn Property="@(t => t.CreatedOn)" Title="Aangemaakt"
                                    Format="dd-MM-yyyy HH:mm" Sortable="true" />

                    <TemplateColumn Title="Acties">
                        <div class="btn-group btn-group-sm" role="group">
                            <button class="btn btn-outline-primary"
                                    @onclick="() => ViewTicket(context.TicketID)"
                                    title="Bekijken">
                                <i class="bi bi-eye"></i>
                            </button>
                            <button class="btn btn-outline-warning"
                                    @onclick="() => EditTicket(context.TicketID)"
                                    title="Bewerken">
                                <i class="bi bi-pencil"></i>
                            </button>
                        </div>
                    </TemplateColumn>
                </QuickGrid>

                <Paginator State="@pagination" />
            </div>
        </div>
    }
</div>

<style>
    .search-box {
        min-width: 100px;
    }

    /* Custom styling voor de QuickGrid */
    .quickgrid {
        font-size: 0.95rem;
    }

        .quickgrid th {
            background-color: #f8f9fa;
            font-weight: 600;
        }

        .quickgrid tbody tr:hover {
            background-color: #f5f5f5;
            cursor: pointer;
        }
</style>

@code {
    private List<TicketDto> tickets = new();
    private bool isLoading = true;
    private string errorMessage = string.Empty;
    private PaginationState pagination = new PaginationState { ItemsPerPage = 10 };

    // Filters
    private string searchQuery = string.Empty;
    private string filterStatus = string.Empty;
    private string filterPriority = string.Empty;
    private string codeFilter = string.Empty;

    private bool HasActiveFilters =>
        !string.IsNullOrWhiteSpace(searchQuery) ||
        !string.IsNullOrWhiteSpace(filterStatus) ||
        !string.IsNullOrWhiteSpace(filterPriority) ||
        !string.IsNullOrWhiteSpace(codeFilter);

    private IQueryable<TicketDto> FilteredTickets
    {
        get
        {
            IQueryable<TicketDto> query = tickets.AsQueryable();

            // Algemene zoekfilter
            if (!string.IsNullOrWhiteSpace(searchQuery))
            {
                query = query.Where(t =>
                    t.TicketCode.Contains(searchQuery, StringComparison.OrdinalIgnoreCase) ||
                    t.Description.Contains(searchQuery, StringComparison.OrdinalIgnoreCase) ||
                    t.CompanyName.Contains(searchQuery, StringComparison.OrdinalIgnoreCase)
                );
            }

            // Code filter (column specific)
            if (!string.IsNullOrWhiteSpace(codeFilter))
            {
                query = query.Where(t =>
                    t.TicketCode.Contains(codeFilter, StringComparison.OrdinalIgnoreCase));
            }

            // Status filter
            if (!string.IsNullOrWhiteSpace(filterStatus))
            {
                TicketStatus status = (TicketStatus)int.Parse(filterStatus);
                query = query.Where(t => t.Status == status);
            }

            // Prioriteit filter
            if (!string.IsNullOrWhiteSpace(filterPriority))
            {
                Priority priority = (Priority)int.Parse(filterPriority);
                query = query.Where(t => t.Priority == priority);
            }

            return query;
        }
    }

    protected override async Task OnInitializedAsync()
    {
        try
        {
            tickets = await TicketApiService.GetAllTicketsAsync();
        }
        catch (Exception ex)
        {
            errorMessage = $"Fout bij laden van tickets: {ex.Message}";
        }
        finally
        {
            isLoading = false;
        }
    }

    private void ClearFilters()
    {
        searchQuery = string.Empty;
        filterStatus = string.Empty;
        filterPriority = string.Empty;
        codeFilter = string.Empty;
        pagination.ItemsPerPage = 10;
    }

    private void ViewTicket(int ticketId)
    {
        Navigation.NavigateTo($"/ticket/{ticketId}");
    }

    private void EditTicket(int ticketId)
    {
        Navigation.NavigateTo($"/ticket/edit/{ticketId}");
    }

    private void GoToCreateTicket()
    {
        // Probeer zonder leading slash
        Navigation.NavigateTo("ticket/create");

        // Als bovenstaande niet werkt, probeer dan:
        // Navigation.NavigateTo("/ticket/create", false);
        // Navigation.NavigateTo("/ticket/create", true); // force load
        // Navigation.NavigateTo("Tickets/Create"); // andere route naam
    }

    // Helper methodes voor display namen
    private string GetStatusDisplayName(TicketStatus status) => status switch
    {
        TicketStatus.Open => "Open",
        TicketStatus.Assigned => "Toegewezen",
        TicketStatus.InProgress => "In Behandeling",
        TicketStatus.Solved => "Opgelost",
        TicketStatus.Closed => "Gesloten",
        TicketStatus.Cancelled => "Geannuleerd",
        _ => status.ToString()
    };

    private string GetPriorityDisplayName(Priority priority) => priority switch
    {
        Priority.Low => "Laag",
        Priority.Normal => "Normaal",
        Priority.High => "Hoog",
        Priority.Urgent => "Urgent",
        Priority.Critical => "Kritiek",
        _ => priority.ToString()
    };

    // Helper methodes voor styling
    private string GetStatusBadgeClass(TicketStatus status) => status switch
    {
        TicketStatus.Open => "bg-warning text-dark",
        TicketStatus.Assigned => "bg-info",
        TicketStatus.InProgress => "bg-primary",
        TicketStatus.Solved => "bg-success",
        TicketStatus.Closed => "bg-secondary",
        TicketStatus.Cancelled => "bg-danger",
        _ => "bg-secondary"
    };

    private string GetPriorityBadgeClass(Priority priority) => priority switch
    {
        Priority.Low => "bg-secondary",
        Priority.Normal => "bg-info",
        Priority.High => "bg-warning text-dark",
        Priority.Urgent => "bg-danger",
        Priority.Critical => "bg-dark",
        _ => "bg-secondary"
    };

    private string GetPriorityIcon(Priority priority) => priority switch
    {
        Priority.Low => "bi-arrow-down",
        Priority.Normal => "bi-dash",
        Priority.High => "bi-arrow-up",
        Priority.Urgent => "bi-exclamation-triangle",
        Priority.Critical => "bi-exclamation-octagon",
        _ => "bi-dash"
    };
}
@page "/mechanic/{MechanicId:int}"
@using ZorgmeldSysteem.Blazor.ViewModels.Mechanic
@using ZorgmeldSysteem.Blazor.Components.Common
@using ZorgmeldSysteem.Blazor.Models.DTOs.Mechanic
@using ZorgmeldSysteem.Blazor.Models.Enums
@using ZorgmeldSysteem.Blazor.Services.Api
@using ZorgmeldSysteem.Blazor.Services.Helpers
@inject MechanicApiService MechanicApiService
@inject MechanicDisplayService DisplayService
@inject NavigationManager Navigation
@implements IDisposable
@rendermode InteractiveServer

<PageTitle>@(viewModel.Mechanic?.Name ?? "Monteur Details")</PageTitle>

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h3>@(viewModel.IsEditMode ? "Monteur Bewerken" : "Monteur Details")</h3>
        <div>
            @if (!viewModel.IsEditMode && viewModel.Mechanic != null)
            {
                <button class="btn btn-warning me-2" @onclick="viewModel.EnableEditMode">
                    <i class="bi bi-pencil"></i> Bewerken
                </button>
            }
            <button class="btn btn-secondary" @onclick="GoBack">
                <i class="bi bi-arrow-left"></i> Terug
            </button>
        </div>
    </div>

    <AlertMessage Message="@viewModel.ErrorMessage" Type="danger" Icon="exclamation-triangle" />
    <AlertMessage Message="@viewModel.SuccessMessage" Type="success" Icon="check-circle" />

    @if (viewModel.IsLoading)
    {
        <LoadingSpinner Message="Monteur laden..." />
    }
    else if (viewModel.Mechanic == null)
    {
        <div class="alert alert-warning">
            <i class="bi bi-exclamation-triangle"></i> Monteur niet gevonden.
        </div>
    }
    else
    {
        <div class="row">
            <div class="col-md-8">
                <EditForm Model="@viewModel.Mechanic" OnValidSubmit="HandleSubmit" FormName="editMechanicFomr">
                    <DataAnnotationsValidator />

                    <div class="card mb-3">
                        <div class="card-header">
                            <h5 class="mb-0">Persoonlijke Gegevens</h5>
                        </div>
                        <div class="card-body">
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="mb-3">
                                        <label class="form-label">Naam *</label>
                                        <InputText class="form-control" @bind-Value="viewModel.Mechanic.Name"
                                                   readonly="@(!viewModel.IsEditMode)" />
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="mb-3">
                                        <label class="form-label">Type *</label>
                                        <InputSelect class="form-select" @bind-Value="viewModel.Mechanic.Type"
                                                     disabled="@(!viewModel.IsEditMode)">
                                            @foreach (MechanicType type in Enum.GetValues(typeof(MechanicType)))
                                            {
                                                <option value="@type">@DisplayService.GetMechanicTypeDisplayName(type)</option>
                                            }
                                        </InputSelect>
                                    </div>
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-md-6">
                                    <div class="mb-3">
                                        <label class="form-label">Email *</label>
                                        <InputText type="email" class="form-control" @bind-Value="viewModel.Mechanic.Email"
                                                   readonly="@(!viewModel.IsEditMode)" />
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="mb-3">
                                        <label class="form-label">Telefoonnummer *</label>
                                        <InputText class="form-control" @bind-Value="viewModel.Mechanic.Phonenumber"
                                                   readonly="@(!viewModel.IsEditMode)" />
                                    </div>
                                </div>
                            </div>

                            @if (!viewModel.IsEditMode)
                            {
                                <div class="mb-3">
                                    <label class="form-label">Bedrijf</label>
                                    <input type="text" class="form-control" value="@(viewModel.Mechanic.CompanyName ?? "Geen bedrijf")" readonly />
                                </div>

                                <div class="form-check">
                                    <input class="form-check-input" type="checkbox" checked="@viewModel.Mechanic.IsActive" disabled />
                                    <label class="form-check-label">
                                        Actief
                                    </label>
                                </div>
                            }
                            else
                            {
                                <div class="form-check">
                                    <InputCheckbox class="form-check-input" id="isActive" @bind-Value="viewModel.Mechanic.IsActive" />
                                    <label class="form-check-label" for="isActive">
                                        Actief
                                    </label>
                                </div>
                            }

                            @if (viewModel.IsEditMode)
                            {
                                <div class="mt-3 d-flex gap-2">
                                    <button type="submit" class="btn btn-primary" disabled="@viewModel.IsSaving">
                                        @if (viewModel.IsSaving)
                                        {
                                            <span class="spinner-border spinner-border-sm me-2"></span>
                                        }
                                        <i class="bi bi-save"></i> Opslaan
                                    </button>
                                    <button type="button" class="btn btn-secondary" @onclick="CancelEdit">
                                        <i class="bi bi-x-circle"></i> Annuleren
                                    </button>
                                </div>
                            }
                        </div>
                    </div>
                </EditForm>
            </div>

            <div class="col-md-4">
                <div class="card">
                    <div class="card-header">
                        <h5 class="mb-0">Acties</h5>
                    </div>
                    <div class="card-body d-grid gap-2">
                        @if (!viewModel.IsEditMode)
                        {
                            <button class="btn btn-danger" @onclick="viewModel.ShowDeleteDialog">
                                <i class="bi bi-trash"></i> Verwijderen
                            </button>
                        }
                    </div>
                </div>

                <div class="card mt-3">
                    <div class="card-header">
                        <h5 class="mb-0">Informatie</h5>
                    </div>
                    <div class="card-body">
                        <p class="mb-2"><small class="text-muted">ID: @viewModel.Mechanic.MechanicID</small></p>
                        <p class="mb-2">
                            <small class="text-muted">Type:</small><br />
                            <span class="badge @DisplayService.GetMechanicTypeBadgeClass(viewModel.Mechanic.Type)">
                                <i class="bi @DisplayService.GetMechanicTypeIcon(viewModel.Mechanic.Type)"></i>
                                @DisplayService.GetMechanicTypeDisplayName(viewModel.Mechanic.Type)
                            </span>
                        </p>
                        <p class="mb-0">
                            <small class="text-muted">Status:</small><br />
                            @if (viewModel.Mechanic.IsActive)
                            {
                                <span class="badge bg-success">Actief</span>
                            }
                            else
                            {
                                <span class="badge bg-secondary">Inactief</span>
                            }
                        </p>
                    </div>
                </div>
            </div>
        </div>
    }
</div>

<ConfirmDialog Show="@viewModel.ShowDeleteConfirmation"
               Title="Monteur Verwijderen"
               Message="@($"Weet je zeker dat je {viewModel.Mechanic?.Name} wilt verwijderen?")"
               ConfirmText="Verwijderen"
               ConfirmButtonType="danger"
               Icon="exclamation-triangle"
               IconColor="danger"
               IsProcessing="@viewModel.IsDeleting"
               OnConfirm="ConfirmDelete"
               OnCancel="viewModel.CancelDelete">
    <p class="text-danger">
        <i class="bi bi-exclamation-triangle"></i> Deze actie kan niet ongedaan worden gemaakt.
    </p>
</ConfirmDialog>

@code {
    [Parameter] public int MechanicId { get; set; }
    private MechanicDetailsViewModel viewModel = new();

    protected override async Task OnInitializedAsync()
    {
        viewModel.OnStateChanged += StateHasChanged;
        await viewModel.LoadMechanicAsync(() => MechanicApiService.GetMechanicByIdAsync(MechanicId));
    }

    private async Task HandleSubmit()
    {
        var updateDto = new UpdateMechanicDto
            {
                Name = viewModel.Mechanic!.Name,
                Email = viewModel.Mechanic.Email,
                Phonenumber = viewModel.Mechanic.Phonenumber,
                Type = viewModel.Mechanic.Type,
                IsActive = viewModel.Mechanic.IsActive,
                CompanyID = viewModel.Mechanic.CompanyID,
                ChangedBy = "User" // TODO: Get from auth
            };

        await viewModel.SaveMechanicAsync(() => MechanicApiService.UpdateMechanicAsync(MechanicId, updateDto));
    }

    private async Task CancelEdit()
    {
        viewModel.CancelEdit();
        // Reload original data
        await viewModel.LoadMechanicAsync(() => MechanicApiService.GetMechanicByIdAsync(MechanicId));
    }

    private async Task ConfirmDelete()
    {
        bool success = await viewModel.DeleteMechanicAsync(() => MechanicApiService.DeleteMechanicAsync(MechanicId));
        if (success)
        {
            Navigation.NavigateTo("/mechanic");
        }
    }

    private void GoBack() => Navigation.NavigateTo("/mechanic");

    public void Dispose()
    {
        viewModel.OnStateChanged -= StateHasChanged;
    }
}
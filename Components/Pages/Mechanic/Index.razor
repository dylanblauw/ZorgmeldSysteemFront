@page "/mechanic"
@using Microsoft.AspNetCore.Components.QuickGrid
@using ZorgmeldSysteem.Blazor.Models.DTOs.Mechanic
@using ZorgmeldSysteem.Blazor.Models.Enums
@using ZorgmeldSysteem.Blazor.Services.Api
@using ZorgmeldSysteem.Blazor.Services.Helpers
@using ZorgmeldSysteem.Blazor.Components.Common
@using ZorgmeldSysteem.Blazor.ViewModels.Mechanic
@inject MechanicApiService MechanicApiService
@inject MechanicDisplayService DisplayService
@inject NavigationManager Navigation
@implements IDisposable
@rendermode InteractiveServer

<PageTitle>Monteurs Overzicht</PageTitle>

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h3>Monteurs Overzicht</h3>
        <button class="btn btn-primary" @onclick="GoToCreateMechanic">
            <i class="bi bi-plus-circle"></i> Nieuwe Monteur
        </button>
    </div>

    <AlertMessage Message="@viewModel.ErrorMessage" Type="danger" Icon="exclamation-triangle" />
    <AlertMessage Message="@viewModel.SuccessMessage" Type="success" Icon="check-circle" Dismissible="true" />

    @if (viewModel.IsLoading)
    {
        <LoadingSpinner Message="Monteurs laden..." />
    }
    else
    {
        <!-- Filter sectie -->
        <div class="card mb-4">
            <div class="card-body">
                <div class="row g-3">
                    <div class="col-md-4">
                        <label class="form-label">Zoeken</label>
                        <input type="text" class="form-control"
                               @bind="viewModel.SearchQuery"
                               @bind:event="oninput"
                               placeholder="Zoek op naam, email of telefoonnummer..." />
                    </div>
                    <div class="col-md-3">
                        <label class="form-label">Type</label>
                        <select class="form-select" @bind="viewModel.FilterType" @bind:event="onchange">
                            <option value="">Alle types</option>
                            @foreach (MechanicType type in Enum.GetValues(typeof(MechanicType)))
                            {
                                <option value="@type">@DisplayService.GetMechanicTypeDisplayName(type)</option>
                            }
                        </select>
                    </div>
                    <div class="col-md-2">
                        <label class="form-label">Status</label>
                        <select class="form-select" @bind="viewModel.FilterIsActive" @bind:event="onchange">
                            <option value="">Alle</option>
                            <option value="true">Actief</option>
                            <option value="false">Inactief</option>
                        </select>
                    </div>
                    <div class="col-md-3">
                        <label class="form-label">&nbsp;</label>
                        <button class="btn btn-secondary w-100" @onclick="viewModel.ClearFilters">
                            <i class="bi bi-x-circle"></i> Reset Filters
                        </button>
                    </div>
                </div>
            </div>
        </div>

        <!-- QuickGrid -->
        <div class="card">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-center mb-3">
                    <p class="text-muted mb-0">
                        <i class="bi bi-filter"></i> @viewModel.GetFilteredMechanics().Count van @viewModel.AllMechanics.Count monteurs
                    </p>
                    <div>
                        <label class="me-2">Items per pagina:</label>
                        <select class="form-select form-select-sm d-inline-block" style="width: auto;"
                                @bind="@pagination.ItemsPerPage" @bind:event="onchange">
                            <option value="5">5</option>
                            <option value="10">10</option>
                            <option value="25">25</option>
                            <option value="50">50</option>
                        </select>
                    </div>
                </div>

                <QuickGrid Items="@viewModel.GetFilteredMechanics().AsQueryable()" Pagination="@pagination" Class="table table-hover">
                    <PropertyColumn Property="@(m => m.Name)" Title="Naam" Sortable="true" />

                    <TemplateColumn Title="Type" Sortable="true"
                                    SortBy="@(GridSort<MechanicDto>.ByAscending(m => m.Type))">
                        <span class="badge @DisplayService.GetMechanicTypeBadgeClass(context.Type)">
                            <i class="bi @DisplayService.GetMechanicTypeIcon(context.Type)"></i>
                            @DisplayService.GetMechanicTypeDisplayName(context.Type)
                        </span>
                    </TemplateColumn>

                    <PropertyColumn Property="@(m => m.Email)" Title="Email" Sortable="true" />

                    <PropertyColumn Property="@(m => m.Phonenumber)" Title="Telefoonnummer" Sortable="true" />

                    <TemplateColumn Title="Bedrijf" Sortable="true"
                                    SortBy="@(GridSort<MechanicDto>.ByAscending(m => m.CompanyName ?? ""))">
                        @(context.CompanyName ?? "-")
                    </TemplateColumn>

                    <TemplateColumn Title="Status" Sortable="true"
                                    SortBy="@(GridSort<MechanicDto>.ByDescending(m => m.IsActive))">
                        @if (context.IsActive)
                        {
                            <span class="badge bg-success">Actief</span>
                        }
                        else
                        {
                            <span class="badge bg-secondary">Inactief</span>
                        }
                    </TemplateColumn>

                    <TemplateColumn Title="Acties">
                        <div class="btn-group btn-group-sm" role="group">
                            <button class="btn btn-outline-primary"
                                    @onclick="() => ViewMechanic(context.MechanicID)"
                                    title="Bekijken">
                                <i class="bi bi-eye"></i>
                            </button>
                            <button class="btn btn-outline-warning"
                                    @onclick="() => EditMechanic(context.MechanicID)"
                                    title="Bewerken">
                                <i class="bi bi-pencil"></i>
                            </button>
                            <button class="btn btn-outline-danger"
                                    @onclick="() => viewModel.ShowDeleteConfirmation(context)"
                                    title="Verwijderen">
                                <i class="bi bi-trash"></i>
                            </button>
                        </div>
                    </TemplateColumn>
                </QuickGrid>

                <Paginator State="@pagination" />
            </div>
        </div>
    }
</div>

<ConfirmDialog 
    Show="@(viewModel.MechanicToDelete != null)"
    Title="Monteur Verwijderen"
    Message="@($"Weet je zeker dat je {viewModel.MechanicToDelete?.Name} wilt verwijderen? Deze actie kan niet ongedaan worden gemaakt.")"
    ConfirmText="Verwijderen"
    CancelText="Annuleren"
    ConfirmButtonType="danger"
    Icon="exclamation-triangle"
    IconColor="danger"
    IsProcessing="@viewModel.IsDeleting"
    OnConfirm="ConfirmDelete"
    OnCancel="viewModel.CancelDelete" />

<style>
    .quickgrid {
        font-size: 0.95rem;
    }

    .quickgrid th {
        background-color: #f8f9fa;
        font-weight: 600;
    }

    .table-hover tbody tr:hover {
        background-color: #f5f5f5;
    }
</style>

@code {
    private MechanicsViewModel viewModel = new();
    private PaginationState pagination = new PaginationState { ItemsPerPage = 10 };

    protected override async Task OnInitializedAsync()
    {
        viewModel.OnStateChanged += StateHasChanged;
        
        await viewModel.LoadMechanicsAsync(() => MechanicApiService.GetAllMechanicsAsync());
    }

    private void ViewMechanic(int mechanicId)
    {
        Navigation.NavigateTo($"/mechanic/{mechanicId}");
    }

    private void EditMechanic(int mechanicId)
    {
        Navigation.NavigateTo($"/mechanic/{mechanicId}");
    }

    private void GoToCreateMechanic()
    {
        Navigation.NavigateTo("/mechanic/create");
    }

    private async Task ConfirmDelete()
    {
        await viewModel.DeleteMechanicAsync((id) => MechanicApiService.DeleteMechanicAsync(id));
    }

    public void Dispose()
    {
        viewModel.OnStateChanged -= StateHasChanged;
    }
}